<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:backgroundTint="#009688"
    android:fillViewport="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="3dp"
        android:layout_marginRight="3dp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/textView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="0.5"
            android:backgroundTint="@android:color/darker_gray"
            android:gravity="left"
            android:text="KC50/TD50 SAMPLE APP"
            android:textSize="20dp" />

        <!--            android:enabled="true"-->
        <!--            android:focusable="true"-->
        <!--            android:focusableInTouchMode="true"-->

        <EditText
            android:id="@+id/editTextText2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="0.5"

            android:ems="20"
            android:inputType="text"
            android:text="Just tap here to open an overlay"
            android:textFontWeight="30" />

        <EditText
            android:id="@+id/editTextText3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="0.5"

            android:ems="20"
            android:inputType="text"
            android:text="Another input text field- "
            android:textFontWeight="30" />

        <EditText
            android:id="@+id/editTextText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="0.5"
            android:inputType="text"
            android:enabled="true"
            android:focusable="true"
            android:focusableInTouchMode="true"
            android:ems="20"
            android:text="this is editable- " />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="3dp"
            android:layout_marginRight="3dp"
            android:orientation="horizontal">

            <Button
                android:layout_width="200dp"
                android:layout_height="200dp"
                android:layout_marginLeft="3dp"
                android:layout_marginRight="3dp"
                android:layout_weight="0.5"
                android:backgroundTint="#00FFFF"
                android:onClick="onClickbtn_CYAN"
                android:text="CYAN"
                android:textColor="@color/black" />

            <Button
                android:layout_width="200dp"
                android:layout_height="200dp"
                android:layout_marginLeft="3dp"
                android:layout_marginRight="3dp"
                android:layout_weight="0.5"
                android:backgroundTint="#FF00FF"
                android:onClick="onClickbtn_MAGENTA"
                android:text="MAGENTA"
                android:textColor="@color/black"/>

            <Button
                android:layout_width="200dp"
                android:layout_height="200dp"
                android:layout_marginLeft="3dp"
                android:layout_marginRight="3dp"
                android:layout_weight="0.5"
                android:backgroundTint="#FFFF00"
                android:onClick="onClickbtn_YELLOW"
                android:text="YELLOW"
                android:textColor="@color/black"/>

        </LinearLayout>


    </LinearLayout>
</ScrollView>